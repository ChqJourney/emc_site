{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "loading"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "sql:default",
    "store:default",
    "dialog:default",
    "fs:default",
    "fs:write-files",
    "core:event:allow-listen",
    "core:event:default",
    "core:window:allow-close",
    {
      "identifier":"fs:scope",
      "allow": ["**"]
    }
  ]
}